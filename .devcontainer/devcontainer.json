// For format details, see https://aka.ms/devcontainer.json
{
	"name": "Rust",
	"build": {
		"dockerfile": "../Docker/Dockerfile.dev"					//"dockerfile": "../Dockerfile.build"
	},
	"postCreateCommand": "rustup component add clippy rustfmt rust-docs rust-src && mkdir -p /root/.ssh/ && cp /workspaces/rradio_lcd_driver/.devcontainer/.ssh/* /root/.ssh/ && chmod 600 /root/.ssh/id_rsa",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"actboy168.tasks",
				"bungcip.better-toml",
				"MS-vsliveshare.vsliveshare",
				"rust-lang.rust-analyzer",
				"serayuzgur.crates",
				"usernamehw.errorlens",
				"vadimcn.vscode-lldb",
				"yzhang.markdown-all-in-one"
			]
		}
	}
}
