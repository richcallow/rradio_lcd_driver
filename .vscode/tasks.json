{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cross build",
            "problemMatcher": "$rustc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Install on 192.168.0.11",
            "type": "shell",
            "command": "scp target/armv7-unknown-linux-gnueabihf/debug/rradio_lcd_driver 192.168.0.11:/home/pi/remote_rradio/",
            "dependsOn": "Build",
            "problemMatcher": []
        },
        {
            "label": "Run on 192.168.0.11",
            "type": "shell",
            "command": "ssh -t 192.168.0.11 \"cd remote_rradio; sudo ./rradio_lcd_driver;\"",
            "problemMatcher": []
        }
    ]
}